%nav.Navbar
  =link_to root_path, class: "Logo" do
    =icon('diamond')
    Codeborative

  %ul.TopMenu
    %li.TopMenu-item=link_to "Home", root_path
    %li.TopMenu-item=link_to "Search projects", projects_path
    - if user_signed_in?
      %li.TopMenu-item=link_to "Mailbox", user_messages_path(current_user.last_conversation)
      %li.TopMenu-item.Dropdown
        =link_to '#' do
          =current_user.name
          =icon('caret-down')

        %ul
          %li=link_to "Profile", edit_user_registration_path
          %li=link_to "Projects", user_projects_path
          %li=link_to "Friends", user_friends_path
          - if current_user.admin?
            %li=link_to "Admin panel", admin_root_path
          %li=link_to "Sign out", destroy_user_session_path, :method => :delete
    - else
      %li.TopMenu-item.TopMenu-item--border
        =link_to user_omniauth_authorize_path(:github) do
          =icon('github-alt')
          Connect with Github

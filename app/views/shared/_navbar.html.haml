%nav.Navbar
  =link_to root_path, class: "Logo" do
    =icon('diamond')
    Codeborative

  %ul.TopMenu
    %li.TopMenu-item=link_to "Home", root_path
    %li.TopMenu-item=link_to "Search", search_path
    - if user_signed_in?
      %li.TopMenu-item=link_to "My profile", user_profile_path(current_user)
      - if current_user.admin?
        %li.TopMenu-item=link_to "Admin panel", admin_root_path
      %li.TopMenu-item=link_to "Sign out", destroy_user_session_path, :method => :delete
    - else
      %li.TopMenu-item.TopMenu-item--border
        =link_to user_omniauth_authorize_path(:github) do
          =icon('github-alt')
          Connect with Github

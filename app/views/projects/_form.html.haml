= form_for @project do |f|
  .input-group
    =f.label :name
    =f.text_field :name

  .input-group
    =f.label :url
    =f.text_field :url

  .input-group
    =f.label :description
    =f.text_area :description

  .input-group
    = label_tag 'js-tags', 'Tags'
    = text_field_tag 'project[tags]', nil, id: 'js-tags', data: {selectize_value: @project.tags}

  .input-group
    =f.submit "Submit", class: "Button Button--red Button--block"
